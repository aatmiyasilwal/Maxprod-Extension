{
  "manifest_version": 3,
  "name": "Maxprod",
  "description": "Stay focused by blocking distracting sites, subreddits, and YouTube channels you choose.",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "minimum_chrome_version": "113",
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Maxprod",
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": []
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
